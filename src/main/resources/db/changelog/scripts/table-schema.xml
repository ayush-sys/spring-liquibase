    <!--    users table schema -->
    <changeSet id="20240811-create-users-table" author="ayush.pattanayak">
        <createTable tableName="users" schemaName="redcloud">
            <column name="id" type="integer">
                <constraints primaryKey="true" primaryKeyName="user_id_pk" nullable="false"/>
            </column>
            <column name="name" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement tableName="users"
                          schemaName="redcloud"
                          columnName="id"
                          columnDataType="integer"
                          startWith="1"
                          incrementBy="1"/>
    </changeSet>

    <!--    products table schema -->
    <changeSet id="20240811-create-products-table" author="ayush.pattanayak">
        <createTable tableName="products" schemaName="redcloud">
            <column name="product_id" type="integer">
                <constraints primaryKey="true" primaryKeyName="product_id_pk" nullable="false"/>
            </column>
            <column name="product_name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="available_stocks" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement tableName="products"
                          schemaName="redcloud"
                          columnName="product_id"
                          columnDataType="integer"
                          startWith="100"
                          incrementBy="1"/>
    </changeSet>

    <!--    orders table schema -->
    <changeSet id="20240811-create-orders-table" author="ayush.pattanayak">
        <createTable tableName="orders" schemaName="redcloud">
            <column name="order_id" type="integer">
                <constraints primaryKey="true" primaryKeyName="order_id_pk" nullable="false"/>
            </column>
            <column name="user_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="product_name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement tableName="orders"
                          schemaName="redcloud"
                          columnName="order_id"
                          columnDataType="integer"
                          startWith="1"
                          ncrementBy="1"/>

        <!-- Add foreign key constraint for user_id referencing users table -->
        <addForeignKeyConstraint baseTableName="orders"
                                 baseColumnNames="user_id"
                                 constraintName="fk_orders_user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 schemaName="redcloud"/>

        <!-- Add foreign key constraint for product_id referencing products table -->
        <addForeignKeyConstraint baseTableName="orders"
                                 baseColumnNames="product_id"
                                 constraintName="fk_orders_product_id"
                                 referencedTableName="products"
                                 referencedColumnNames="product_id"
                                 schemaName="redcloud"/>
    </changeSet>

</databaseChangeLog>
